CREATE TABLE IF NOT EXISTS ``.`sys_menu` (
  `id` INT NOT NULL AUTO_INCREMENT,
  `menuName` VARCHAR(255) NULL,
  `menuIcon` VARCHAR(255) NULL,
  `menuPerm` VARCHAR(255) NULL,
  `menuUrl` VARCHAR(255) NULL,
  `parentId` INT NULL DEFAULT 0,
  `sortBy` INT NULL DEFAULT 0,
  `delFlag` TINYINT(1) NULL DEFAULT 0,
  PRIMARY KEY (`id`))
ENGINE = InnoDB
DEFAULT CHARACTER SET = utf8
COLLATE = utf8_bin

CREATE TABLE IF NOT EXISTS ``.`sys_role` (
  `id` INT NOT NULL AUTO_INCREMENT,
  `roleName` VARCHAR(255) NULL,
  `roleDesc` VARCHAR(255) NULL,
  `sortBy` INT NULL DEFAULT 0,
  `delFlag` TINYINT(1) NULL DEFAULT 0,
  PRIMARY KEY (`id`))
ENGINE = InnoDB
DEFAULT CHARACTER SET = utf8
COLLATE = utf8_bin

CREATE TABLE IF NOT EXISTS ``.`sys_role_menu` (
  `id` BIGINT NOT NULL AUTO_INCREMENT,
  `menuId` INT NULL,
  `roleId` INT NULL,
  PRIMARY KEY (`id`))
ENGINE = InnoDB
DEFAULT CHARACTER SET = utf8
COLLATE = utf8_bin

CREATE TABLE IF NOT EXISTS ``.`sys_user` (
  `id` INT NOT NULL AUTO_INCREMENT,
  `loginId` VARCHAR(255) NOT NULL,
  `userName` VARCHAR(255) NULL,
  `deptId` INT NULL,
  `sortBy` INT NULL DEFAULT 0,
  `delFlag` TINYINT(1) NULL DEFAULT 0,
  PRIMARY KEY (`id`),
  UNIQUE INDEX `loginId_UNIQUE` (`loginId` ASC))
ENGINE = InnoDB
DEFAULT CHARACTER SET = utf8
COLLATE = utf8_bin

CREATE TABLE IF NOT EXISTS ``.`sys_user_role` (
  `id` BIGINT NOT NULL AUTO_INCREMENT,
  `roleId` INT NULL,
  `userId` INT NULL,
  PRIMARY KEY (`id`))
ENGINE = InnoDB
DEFAULT CHARACTER SET = utf8
COLLATE = utf8_bin

CREATE TABLE IF NOT EXISTS ``.`sys_user_info` (
  `id` INT NOT NULL AUTO_INCREMENT,
  `userId` INT NULL,
  PRIMARY KEY (`id`))
ENGINE = InnoDB
DEFAULT CHARACTER SET = utf8
COLLATE = utf8_bin

CREATE TABLE IF NOT EXISTS ``.`sys_dept` (
  `id` INT NOT NULL AUTO_INCREMENT,
  `deptName` VARCHAR(255) NULL,
  `sortBy` INT NULL DEFAULT 0,
  `delFlag` INT NULL DEFAULT 0,
  PRIMARY KEY (`id`))
ENGINE = InnoDB
DEFAULT CHARACTER SET = utf8
COLLATE = utf8_bin
